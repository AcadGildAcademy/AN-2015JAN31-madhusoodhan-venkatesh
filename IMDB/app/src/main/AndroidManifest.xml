    <uses-sdk android:minSdkVersion="9" android:maxSdkVersion="20"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/icon" android:theme="@style/AppTheme">

        <activity android:name=".OptionMenuActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".UpcomingMoviesActivity" android:label="Upcoming Movie Details"></activity>

        <activity android:name=".MovieDetailsActivity" android:label="Movie Details"></activity>


    </application>

</manifest>
